{
  "$schema": "https://typedoc.org/schema.json",
  "entryPoints": [
    "packages/core/src/index.ts",
    "packages/langchain/src/index.ts",
    "packages/ai/src/index.ts"
  ],
  "entryPointStrategy": "resolve",
  "plugin": ["typedoc-plugin-markdown"],
  "tsconfig": "tsconfig.json",

  "exclude": ["**/tests/**", "**/*.test.ts", "**/dist/**"],

  "out": "docs/api",
  "name": "Prefactor TypeScript SDK",
  "readme": "docs/api-readme.md",
  "projectDocuments": [
    "docs/typedoc/getting-started.md",
    "docs/typedoc/core-instrumentation.md",
    "docs/typedoc/providers-langchain.md",
    "docs/typedoc/providers-ai-sdk.md",
    "docs/typedoc/concepts-schemas.md",
    "docs/typedoc/configuration.md"
  ],

  "excludePrivate": true,
  "excludeInternal": true,
  "excludeProtected": true,

  "hideGenerator": true,

  "validation": {
    "invalidLink": false,
    "notExported": false
  },

  "categoryOrder": ["Core", "Packages", "*"],
  "navigation": {
    "includeCategories": false,
    "includeGroups": false,
    "includeFolders": true,
    "compactFolders": false
  },

  "sort": ["kind"],
  "groupOrder": ["Functions", "*"],
  "categorizeByGroup": true,
  "defaultCategory": "Other",
}
